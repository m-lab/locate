runtime: custom
env: flex
service: locate-platform

resources:
  cpu: 1
  memory_gb: 4

automatic_scaling:
  min_num_instances: 2
  max_num_instances: 4
  # Anecdotally, it seems to take roughly 5m for an instance to initialize
  # fully.
  cool_down_period_sec: 300

env_variables:
  LEGACY_SERVER: https://{{PROJECT}}.appspot.com
  PLATFORM_PROJECT: {{PLATFORM_PROJECT}}
